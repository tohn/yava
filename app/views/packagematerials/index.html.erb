<h1><%= t("packagematerials_title.other") %></h1>

<div class="center">
	<%= will_paginate @packagematerials %>
</div>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
						<th><%= t("activerecord.attributes.packagematerial.image") %></th>
						<th><%= t("activerecord.attributes.packagematerial.name") %></th>
						<th><%= t("activerecord.attributes.packagematerial.description") %></th>
					</tr>
	</thead>

	<tbody>
		<% @packagematerials.order("lower(name)").each do |packagematerial| %>
				<tr>
			<td><%= image_tag packagematerial.image.url(:thumb), class: "img-polaroid" %></td>
			<td><%= link_to packagematerial.name, packagematerial_path(packagematerial.id) %></td>
			<td><%= truncate(packagematerial.description) %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="center">
	<%= will_paginate @packagematerials %>
</div>

<hr>

<p>
	<%= link_to t("form.new", genus: t("form.n"), model: t("packagematerials_title.one")), new_packagematerial_path %>
</p>
