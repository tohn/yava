<% if current_user %>

<%= simple_form_for @brand, :html => { :class => 'form-horizontal' } do |f| %>
		<%= render "layouts/submit_error", :errors => @brand.errors %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :manufacturer_id, collection: Manufacturer.order("lower(name) asc").all, include_blank: false %>
  </div>
<div class="form-actions">
		<%= f.button :submit, :class => 'btn-primary' %>
		<%= submit_tag t(:form_cancel), :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>

<% else %>
	<%= no_rights %>
<% end %>
