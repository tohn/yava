<h1>Listing brands</h1>

<div class="center"><%= will_paginate @brands %></div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
    </tr>
  </thead>

  <tbody>
    <% @brands.order("LOWER(name) ASC").each do |brand| %>
      <tr>
        <td><%= link_to brand.name, brand %></td>
        <td><%= link_to brand.manufacturer.name, manufacturer_path(brand.manufacturer.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center"><%= will_paginate @brands %></div>

<hr>

<p><%= link_to 'New Brand', new_brand_path %></p>
