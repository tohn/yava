<% if current_user %>

<div id="packagematerial" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-focus-on="input:first">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%= t("packagematerials_title.one") %></h3>
  </div>
<div class="modal-body">
	<% @packagematerial = Packagematerial.new %>
	<%= simple_form_for @packagematerial, :html => { :class => 'form-horizontal' }, :remote => true do |f| %>
	<div class="packagematerial-errors"></div>
  
		  <%= f.input :name %>
		  <%= f.hidden_field :user_id, value: current_user.id %>

	<div class="form-actions modal-footer">
		<%= f.button :submit, :class => 'btn-primary' %>
		<%= submit_tag t(:form_cancel), :type => :reset, :class => "btn btn-danger", "data-dismiss" => "modal", "aria-hidden" => "true" %>
	</div>
<% end %>
</div>
</div>

<% else %>
	<%= no_rights %>
<% end %>
