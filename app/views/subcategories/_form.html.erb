<% if current_user %>
	<%= simple_form_for(@subcategory, :html => { :class => 'form-horizontal' }) do |f| %>
	<%= render "layouts/submit_error", :errors => @subcategory.errors %>

	<div class="form-inputs">
		<%= f.input :name %>
		<%= f.input :category_id, collection: Category.all, include_blank: false %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, :class => 'btn-primary' %>
		<%= submit_tag t(:form_cancel), :type => :reset, :class => "btn btn-danger" %>
	</div>
<% end %>
<% else %>
	<%= no_rights %>
<% end %>
