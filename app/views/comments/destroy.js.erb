<% if @comment.errors.any? %>
  $(".comment-errors").empty();
  $('.comment-errors').append('<div class="alert alert-error"><ul class="error-messages"></ul></div>');
  <% @comment.errors.full_messages.each do |msg| %>
    $('.comment-errors .error-messages').append('<%= escape_javascript msg %>');
  <% end %>
<% else %>
  $("div.comment-id-<%= @comment.id %>").remove();
  // update veganity
  //$("div.veganity p:nth-of-type(4)").replaceWith("<p><%#= @v.name.capitalize + " " + t(:veganity_comments) %></p>")
  $(".comment-errors").empty();
<% end %>