<% provide(:title, t(:signin_title)) %>


	<% if current_user %>
			<p><%= t(:nothing_to_see) %></p>
	<% else %>
	<div class="center hero-unit">
	<h1><%= t(:index) %></h1>
		<p><%= t(:users_signin) %></p>
		<p><%= t(:users_accept_tos) %> (<%= link_to t(:tos_title), tos_path %>)</p>

		<p><%= link_to Provider.find(1).fullname, "/auth/github", class: "btn btn-large btn-inverse span2" %></p>
		<p><%= link_to Provider.find(2).fullname, "/auth/google_oauth2", class: "btn btn-large btn-danger span2" %></p>
		<p><%= link_to Provider.find(3).fullname, "/auth/facebook", class: "btn btn-large btn-primary span2" %></p>
		<p><%= link_to Provider.find(4).fullname, "/auth/twitter", class: "btn btn-large btn-info span2" %></p>
	</div>
	<% end %>
