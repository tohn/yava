<h1><%= t("classnames_title.other") %></h1>

<div class="center">
	<%= will_paginate @classnames %>
</div>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
						<th><%= t("activerecord.attributes.classname.sg") %></th>
						<th><%= t("activerecord.attributes.classname.pl") %></th>
						<th><%= t("activerecord.attributes.classname.abbr") %></th>
					</tr>
	</thead>

	<tbody>
		<% @classnames.each do |classname| %>
		<tr>
						<td><%= classname.get_sg %></td>
						<td><%= classname.get_pl %></td>
						<td><%= classname.abbr %></td>
					</tr>
		<% end %>
	</tbody>
</table>

<div class="center">
	<%= will_paginate @classnames %>
</div>

<hr>

<p>
	<%= link_to t("form.new", genus: t("form.m1"), model: t("classnames_title.one")), new_classname_path %>
</p>
