<h1><%= t("categories_title.other") %></h1>

<div class="center">
	<%= will_paginate @categories %>
</div>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
						<th><%= t("activerecord.attributes.category.name") %></th>
					</tr>
	</thead>

	<tbody>
		<%# @categories.order("coalesce(category_id, id), category_id is not null, id").each do |category| %>
		<% @categories.order("lower(name) asc").each do |category| %>
		<tr>
						<td><%= link_to category.name, category_path(category.id) %></td>
					</tr>
		<% end %>
	</tbody>
</table>

<div class="center">
	<%= will_paginate @categories %>
</div>

<hr>

<p>
	<%= link_to t("form.new", genus: t("form.f"), model: t("categories_title.one")), new_category_path %>
</p>
