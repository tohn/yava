<% if current_user %>
	<%= simple_form_for @city, :html => { :class => 'form-horizontal' } do |f| %>
		<%= render "layouts/submit_error", :errors => @city.errors %>
		<%= f.input :postcode %>
		<%= f.input :name %>
		<%= f.input :country_id, collection: Country.order("name ASC"), include_blank: false %>
		<div class="form-actions">
			<%= f.button :submit, :class => 'btn-primary' %>
			<%= submit_tag t(:form_cancel), :type => :reset, :class => "btn btn-danger" %>
		</div>
	<% end %>
<% else %>
	<%= no_rights %>
<% end %>
