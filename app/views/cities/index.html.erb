<h1><%= t(:cities_title, count: 2) %></h1>

<div class="center">
	<%= will_paginate @cities %>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
		<th><%= t("activerecord.attributes.city.postcode") %></th>
		<th><%= t("activerecord.attributes.city.name") %></th>
		<th><%= t("activerecord.attributes.city.country_id") %></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.order("name ASC").each do |city| %>
      <tr>
        <td><%= city.postcode %></td>
        <td><%= link_to city.name, city %></td>
        <td><%= city.country.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center">
	<%= will_paginate @cities %>
</div>

<p><%= link_to t("form.new", genus: t("form.f"), model: t(:cities_title, count: 1)), new_city_path %></p>
