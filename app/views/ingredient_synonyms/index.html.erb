<% provide(:title, t("ingredients_title.other")) %>

<h1><%= t("ingredients_title.other") %></h1>

<div class="center">
	<%= will_paginate @ingredient_synonyms %>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
	  <th><%= t("activerecord.attributes.ingredient.name") %></th>
	  <th><%= t("activerecord.attributes.ingredient.description") %></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_synonyms.order("lower(name) asc").each do |ingredient| %>
      <tr>
        <td><%= link_to ingredient.name, ingredient %></td>
        <td><%= link_to ingredient.ingredient.name, ingredient_path(ingredient.ingredient_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center">
	<%= will_paginate @ingredient_synonyms %>
</div>

<hr>
<p><%= link_to t("form.new", genus: t("form.f"), model: t("ingredients_title.one")), new_ingredient_path %></p>
