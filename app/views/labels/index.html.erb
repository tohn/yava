<h1>Listing labels</h1>

<div class="center"><%= will_paginate @labels %></div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
			<th>Image</th>
      <th>Name</th>
      <th>Feature</th>
    </tr>
  </thead>

  <tbody>
    <% @labels.order("name ASC").each do |label| %>
      <tr>
        <td><%= image_tag label.image.url(:thumb), class: "img-polaroid" %></td>
        <td><%= link_to label.name, label %></td>
        <td><%= link_to label.g_feature, feature_path(label.feature) %></td>
		<!--    <td><%#= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center"><%= will_paginate @labels %></div>

<hr>

<p><%= link_to 'New Label', new_label_path %></p>
