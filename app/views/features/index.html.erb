<h1>Listing features</h1>

<div class="center"><%= will_paginate @features %></div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @features.order("name ASC").each do |feature| %>
      <tr>
        <td><%= link_to feature.name, feature %></td>
        <td><%= truncate(feature.description) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center"><%= will_paginate @features %></div>

<hr>

<p><%= link_to 'New Feature', new_feature_path %></p>
