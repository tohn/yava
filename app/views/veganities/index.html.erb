<% provide(:title, t(:veganities_title, count: 2)) %>

<h1><%= t("veganities_title.other") %></h1>

<div class="center">
	<%= will_paginate @veganities %>
</div>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
						<th><%= t("activerecord.attributes.veganity.image") %></th>
						<th><%= t("activerecord.attributes.veganity.name") %></th>
						<th><%= t("activerecord.attributes.veganity.description") %></th>
					</tr>
	</thead>

	<tbody>
		<% @veganities.order("name ASC").each do |veganity| %>
		<tr>
		  <td><%= image_tag veganity.image.url(:thumb), class: "img-polaroid" %></td>
		  <td><%= link_to veganity.name, veganity_path(veganity) %></td>
		  <td><%= veganity.description %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="center">
	<%= will_paginate @veganities %>
</div>

<hr>

<p>
	<%= link_to t("form.new", genus: t("form.f"), model: t("veganities_title.one")), new_veganity_path %>
</p>
