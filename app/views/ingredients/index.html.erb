<% provide(:title, t("ingredients_title.other")) %>

<h1><%= t("ingredients_title.other") %></h1>

<p><%= link_to t("form.new", genus: t("form.f"), model: t("ingredients_title.one")), new_ingredient_path, { class: "btn" } %></p>
<hr>

<div class="center">
	<%= will_paginate @ingredients %>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
	  <th><%= t("activerecord.attributes.ingredient.name") %></th>
	  <th><%= t("activerecord.attributes.ingredient.description") %></th>
	  <th><%= t("activerecord.attributes.ingredient.veganity_id") %></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.where("not hide").order("lower(name) asc").each do |ingredient| %>
      <tr class="<%= ingredient.veganity.color %>">
        <td><%= link_to truncate(ingredient.get_names), ingredient %></td>
        <td><%= truncate(ingredient.description) %></td>
        <td>
	  <%= ingredient.veganity.name %>
	  <%= t(:veganity_fixed) if ingredient.fixed %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center">
	<%= will_paginate @ingredients %>
</div>

<hr>
<p><%= link_to t("form.new", genus: t("form.f"), model: t("ingredients_title.one")), new_ingredient_path, { class: "btn" } %></p>
